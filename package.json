{
  "name": "deepstream.io-client-js",
  "version": "4.1.1",
  "description": "the javascript client for deepstream.io",
  "keywords": [
    "deepstream",
    "javascript",
    "realtime",
    "client"
  ],
  "main": "dist/src/deepstream.js",
  "module": "dist/srcESM/deepstream.js",
  "types": "dist/src/deepstream.d.ts",
  "scripts": {
    "tsc": "rm -rf dist && tsc",
    "tscESM": "rm -rf distESM && tsc -p tsconfigESM.json",
    "build": "npm run tsc && npm run tscESM",
    "prepublishOnly": "npm run build",
    "preversion": "npm run build && git add distESM dist",
    "test": "mocha -r ts-node/register ./test/**/*Spec.ts --recursive --reporter dot --require source-map-support/register",
    "test:coverage": "nyc mocha"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deepstreamIO/deepstream.io-client-js.git"
  },
  "optionalDependencies": {
    "utf-8-validate": "^5.0.2",
    "bufferutil": "^4.0.1"
  },
  "dependencies": {
    "component-emitter2": "1.3.5",
    "fast-deep-equal": "^2.0.1",
    "node-localstorage": "1.3.1",
    "ws": "^6.1.2"
  },
  "browser": {
    "net": false,
    "ws": false,
    "node-localstorage": false
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.18",
    "@types/chai": "^4.0.6",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.53",
    "@types/sinon": "^4.0.0",
    "@types/ws": "^3.2.1",
    "bluebird": "^3.5.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^4.0.1",
    "nyc": "^13.1.0",
    "sinon": "^4.1.2",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "author": "deepstreamHub GmbH",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/deepstreamIO/deepstream.io-client-js/issues"
  },
  "homepage": "http://deepstream.io",
  "eslintConfig": {
    "extends": "deepstream"
  }
}
