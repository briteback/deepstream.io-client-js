{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "distESM",
    "sourceMap": true,
    "allowJs": false,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    //"noUnusedParameters": true,    
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true    
  },
  "files": [
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/bluebird/index.d.ts",
    "./node_modules/@types/ws/index.d.ts",
    "./src/dependencies.d.ts"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
